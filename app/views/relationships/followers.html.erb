<h1>follower User</h1>
<% if @user.exists? %>
<table>
  <thead>
    <tr>
      <td>image</td>
      <td>name</td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |follower| %>
    <tr>
      <td>
    　<%=link_to user_followers_path(follower) do %>
      <%=image_tag follower.get_profile_image, size: "50x50" %>
      <% end %>
      </td>
      <td><%= follower.name %></td>
      <td>フォロー数:<%= follower.followings.count %></td>
      <td>フォロワー数:<%= follower.followers.count %></td>
      <td><% link_to "Show" , user_path(follower) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>ユーザーはいません</p>
<% end %>
